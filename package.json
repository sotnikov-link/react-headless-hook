{
  "name": "use-headless-root",
  "packageManager": "yarn@3.2.1",
  "private": true,
  "workspaces": [
    "lib",
    "example"
  ],
  "scripts": {
    "prepare": "yarn lint && yarn ws use-headless prepare",
    "example": "yarn ws example start",
    "dev": "yarn ws use-headless watch",
    "check": "yarn format-check && yarn lint-check",
    "fix": "yarn format-fix && yarn lint-fix",
    "format": "prettier --ignore-unknown ./ '!**/{.,}*.{js,tsx}'",
    "format-check": "yarn format --check",
    "format-fix": "yarn format --write",
    "lint-check": "eslint --color --max-warnings 0 --ext .js,.tsx ./ && echo 'ESLint: OK'",
    "lint-fix": "yarn lint-check --fix",
    "ws": "yarn workspace",
    "vscode": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@types/prettier": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.2.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^43.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
